{
  "name": "game-server",
  "version": "1.0.0",
  "description": "Tabletop home game server",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "npx jest",
    "test:coverage": "npx jest --coverage",
    "build": "npx tsc",
    "start": "node -r dotenv/config ./dist/server/index.js",
    "start:dev": "npx ts-node-dev -r dotenv/config --poll --respawn --transpileOnly src/server/index.ts",
    "run": "cd ./dist && node -r dotenv/config index.js",
    "lint": "npx eslint '*/**/*.{js,ts,tsx}' --cache --fix",
    "typeorm": "node --require ts-node/register ./node_modules/typeorm/cli.js",
    "format": "npx prettier ./src --write"
  },
  "author": "pman89@ya.ru",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^5.0.0",
    "class-validator": "^0.13.1",
    "dotenv": "^10.0.0",
    "fastify": "^3.20.2",
    "fastify-auth": "^1.1.0",
    "fastify-cookie": "^5.3.1",
    "fastify-cors": "^6.0.2",
    "fastify-formbody": "^5.1.0",
    "fastify-helmet": "^5.3.2",
    "fastify-jwt": "^3.0.1",
    "fastify-plugin": "^3.0.0",
    "fastify-typeorm-plugin": "^2.1.2",
    "fastify-websocket": "^4.0.0",
    "http-errors": "^1.7.3",
    "http-status-codes": "^2.1.4",
    "jsonwebtoken": "^8.5.1",
    "mysql": "^2.18.1",
    "nodemailer": "^6.4.8",
    "randomcolor": "^0.6.2",
    "sqlite3": "^5.0.0",
    "ts-node": "^10.2.1",
    "typeorm": "^0.2.25",
    "typescript": "^4.3.5",
    "uuid": "^8.1.0",
    "validator": "^13.1.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.2.1",
    "@commitlint/config-conventional": "^13.2.0",
    "@types/bcrypt": "^5.0.0",
    "@types/http-errors": "^1.6.3",
    "@types/http-status-codes": "^1.2.0",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.6.2",
    "@types/nodemailer": "^6.4.0",
    "@types/randomcolor": "^0.5.5",
    "@types/sqlite3": "^3.1.6",
    "@types/uuid": "^8.0.0",
    "@types/ws": "^8.2.0",
    "@typescript-eslint/eslint-plugin": "^4.29.2",
    "@typescript-eslint/parser": "^4.29.2",
    "eslint": "^7.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": ">=4",
    "jest": "^27.0.6",
    "lint-staged": ">=10",
    "prettier": "^2.4.1",
    "pretty-quick": "^3.1.1",
    "ts-jest": "^27.0.5",
    "ts-node-dev": "^1.0.0-pre.44"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.(js|ts)": [
      "eslint --cache --fix"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
