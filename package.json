{
  "name": "game-server",
  "version": "1.0.0",
  "description": "Tabletop home game server",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "npx jest",
    "build": "npx tsc",
    "start": "npx ts-node -T src/index.ts",
    "start:dev": "npx ts-node-dev --respawn --transpileOnly ./src/index.ts",
    "run": "cd ./dist && node index.js",
    "lint": "npx eslint '*/**/*.{js,ts,tsx}' --cache --fix",
    "typeorm": "node --require ts-node/register ./node_modules/typeorm/cli.js"
  },
  "author": "pman89@ya.ru",
  "license": "MIT",
  "dependencies": {
    "fastify": "^2.13.0",
    "fastify-cookie": "^3.6.0",
    "fastify-formbody": "^3.1.0",
    "fastify-helmet": "^3.0.2",
    "fastify-plugin": "^1.6.1",
    "fastify-typeorm-plugin": "^2.1.2",
    "fastify-websocket": "^1.1.1",
    "sqlite3": "^4.2.0",
    "ts-node": "^8.7.0",
    "typeorm": "^0.2.25",
    "typescript": "^3.8.3"
  },
  "devDependencies": {
    "@types/jest": "^25.2.3",
    "@types/node": "^14.0.5",
    "@types/ws": "^7.2.4",
    "@typescript-eslint/eslint-plugin": "^3.0.0",
    "@typescript-eslint/parser": "^3.0.0",
    "eslint": "^7.1.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": ">=4",
    "jest": "^26.0.1",
    "lint-staged": ">=10",
    "prettier": "^2.0.2",
    "ts-jest": "^26.0.0",
    "ts-node-dev": "^1.0.0-pre.44"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.(js|ts)": "eslint --cache --fix"
  }
}
