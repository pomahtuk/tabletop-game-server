{
  "name": "game-server",
  "version": "1.0.0",
  "description": "Tabletop home game server",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "npx jest",
    "test:coverage": "npx jest --coverage",
    "build": "npx tsc",
    "start": "node -r dotenv/config ./dist/index.js",
    "start:dev": "npx ts-node-dev -r dotenv/config --poll --respawn --transpileOnly ./src/index.ts",
    "run": "cd ./dist && node -r dotenv/config index.js",
    "lint": "npx eslint '*/**/*.{js,ts,tsx}' --cache --fix",
    "typeorm": "node --require ts-node/register ./node_modules/typeorm/cli.js",
    "format": "npx prettier ./src --write"
  },
  "author": "pman89@ya.ru",
  "license": "MIT",
  "dependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/http-errors": "^1.6.3",
    "@types/jest": "^26.0.0",
    "@types/node": "^14.0.5",
    "@types/nodemailer": "^6.4.0",
    "@types/randomcolor": "^0.5.5",
    "@types/sqlite3": "^3.1.6",
    "@types/uuid": "^8.0.0",
    "@types/ws": "^7.2.4",
    "bcrypt": "^5.0.0",
    "class-validator": "^0.12.2",
    "dotenv": "^8.2.0",
    "fastify": "^2.13.0",
    "fastify-auth": "^0.7.2",
    "fastify-cookie": "^3.6.0",
    "fastify-formbody": "^3.1.0",
    "fastify-helmet": "^3.0.2",
    "fastify-jwt": "^1.4.0",
    "fastify-plugin": "^1.6.1",
    "fastify-typeorm-plugin": "^2.1.2",
    "fastify-websocket": "^1.1.1",
    "http-errors": "^1.7.3",
    "http-status-codes": "^1.4.0",
    "jsonwebtoken": "^8.5.1",
    "mysql": "^2.18.1",
    "nodemailer": "^6.4.8",
    "randomcolor": "^0.5.4",
    "sqlite3": "^5.0.0",
    "ts-node": "^8.7.0",
    "typeorm": "^0.2.25",
    "typescript": "^3.8.3",
    "uuid": "^8.1.0",
    "validator-js": "^0.2.1"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^3.0.0",
    "@typescript-eslint/parser": "^3.0.0",
    "eslint": "^7.1.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": ">=4",
    "jest": "^26.0.1",
    "lint-staged": ">=10",
    "prettier": "2.0.5",
    "ts-jest": "^26.0.0",
    "ts-node-dev": "^1.0.0-pre.44"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.(js|ts)": [
      "npx prettier --write",
      "eslint --cache --fix"
    ]
  },
  "jest": {
    "collectCoverage": true,
    "coverageReporters": [
      "lcov",
      "json",
      "html"
    ]
  }
}
