{
  "compilerOptions": {
    "experimentalDecorators": true,
    "baseUrl": ".",
    "lib": ["ES2019", "ES2015"],
    "paths": {
      "*": ["src/*"]
    },
    "allowJs": true,
    "target": "ES2019",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "./dist",
    "declaration": true,
    "strict": true
  },
  "include": ["./src/**/*.ts", "index.d.ts", "./types/*.d.ts"],
  "exclude": ["node_modules"],
}
